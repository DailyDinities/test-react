  "compilerOptions": {
    "target": "ES6",
    "module": "es2020",
    "moduleResolution": "nodenext",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "rootDir": "src",
    "outDir": "lib",
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}